<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<TabPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.module_3_assignment_03.HelloController">
   <tabs>
      <Tab text="Maze_1_tab">
         <content>
            <AnchorPane onMouseClicked="#getpixel" prefHeight="258.0" prefWidth="382.0">
               <children>
                  <ImageView fx:id="Maze_1" fitHeight="281.0" fitWidth="507.0" onMouseClicked="#getpixel" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/maze.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="car_one" fitHeight="20.0" fitWidth="55.0" layoutX="-4.0" layoutY="167.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/car2.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="droidImgView" fitHeight="17.0" fitWidth="16.0" layoutX="4.0" layoutY="169.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/robot.png" />
                     </image>
                  </ImageView>
                  <Button fx:id="ctrlDroid" layoutX="125.0" layoutY="281.0" mnemonicParsing="false" onAction="#use_droid" text="Droid" />
                  <Button fx:id="ctrlCar" layoutX="172.0" layoutY="281.0" mnemonicParsing="false" onAction="#use_car" text="Car" />
                  <Button fx:id="animate" layoutX="209.0" layoutY="281.0" mnemonicParsing="false" text="Animation" />
               </children>
            </AnchorPane>
         </content>
      </Tab>
      <Tab text="Maze_2_tab">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="Maze_2" fitHeight="288.0" fitWidth="385.0" layoutY="-3.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/maze2.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
        </content>
      </Tab>
   </tabs>
</TabPane>
